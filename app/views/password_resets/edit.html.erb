<%= form_with model: @user, url: password_reset_path(params[:id]) do |f| %>
  <%= f.label :password %>
  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", required: true %>

  <%= f.submit "Reset password", class: "btn btn-primary btn-large btn-block" %>
<% end %>
